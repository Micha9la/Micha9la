1.3.2.
void repairTheStreet()
{repeat (10) {
        if (rightIsClear())
        {
            fixOneWhole();
        }
        else 
        {
            if (frontIsClear())
            {moveForward();
            }
        }
    }
}

void fixOneWhole ()
{
    turnRight();
    moveForward(); 
    dropBeeper();
    turnAround();
    moveForward();
    turnRight();
    if (frontIsClear())
    {moveForward();
    }
}

1.3.1.
void harvestTheField()
{
    pickBeeper();
    repeat (3){
        moveToRightBeeper();
        pickBeeper(); turnLeft();}
    moveToLeftBeeper(); 
    pickBeeper(); 
    turnLeft();
    repeat (2){
        moveToRightBeeper();
        pickBeeper(); turnLeft();}
    moveForward();
    turnRight();
    moveForward();
    pickBeeper();
    moveToRightBeeper();
    pickBeeper();
    repeat (3){
        moveToRightBeeper();
        pickBeeper(); turnLeft();}
    repeat (2) {
        moveToLeftBeeper();
        pickBeeper();}
    moveToRightBeeper();
    pickBeeper();
    moveToLeftBeeper();
    pickBeeper();
}

void moveToRightBeeper()
{
    moveForward();
    turnRight();
    moveForward();   
}
void moveToLeftBeeper()
{
    moveForward();
    turnLeft();
    moveForward();
    
}
