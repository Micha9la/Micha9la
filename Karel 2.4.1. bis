2.4.2.
void quantizeBits()
{repeat (9)
    { 
        if(onBeeper())
        {
            turnLeft(); 
        }
        if (!onBeeper())
        {
            while (!onBeeper())
            {
                if (frontIsClear())
                {
                    moveForward();
                }
                if(onBeeper())
                {
                    turnLeft(); 
                }
            }
        }
        repeat(5)
        {
            moveForward();
        }
        if (onBeeper())
        {
            addBits();
        }
        else if (!onBeeper())
        {
            removeBits();
        }
    }
}

void addBits()
{
    while (frontIsClear())
    {
        moveForward();
        if (!onBeeper())
        {
            dropBeeper();
        }
    }
    if (!frontIsClear())
    {
        turnAround();
    } 
    while (frontIsClear()) 
    {
        moveForward();
    }  
    turnLeft();
    moveForward();
}

void removeBits()
{
    turnAround();
    while (frontIsClear())
    {
        moveForward();
        if (onBeeper())
        {
            pickBeeper();
        }
    }
    turnLeft();
}


2.4.1.
void solveTheMaze()
{
    while (!onBeeper())
    { 
        if (frontIsClear() && !leftIsClear())
        {
            moveForward();
        }
        else if (leftIsClear())
        {
            turnLeft();
            moveForward();
        }
        else 
        {
            turnRight();  //oder turnAround()
        }
    }
}
